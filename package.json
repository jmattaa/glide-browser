{
    "name": "Glide",
    "version": "1.0.0",
    "description": "",
    "main": "dist/main.js",
    "build": {
        "mac": {
            "icon": "assets/icons/icon.icns"
        },
        "linux": {
            "icon": "assets/icons/icon.png"
        }
    },
    "scripts": {
